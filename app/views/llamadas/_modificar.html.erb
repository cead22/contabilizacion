<%= form_for llamada do |f| %>
	<div class="row">
		<div class="span1"> &nbsp; </div>
		<div class="span6">
			<fieldset>
				<div class="clearfix">
					<%= f.label :funcionando, '¿El centro está funcionando correctamente?' %>
					<div class="input">
						<ul class="inputs-list">
							<li>
								<label>
									<%= f.radio_button :funcionando, true %>
									<span><%= 'Sí' %></span>
								</label>
							</li>
							<li>
								<label>
									<%= f.radio_button :funcionando, false %>
									<span><%= 'No' %></span>
								</label>
							</li>
						</ul>
					</div>
					
				</div>
					<div class="clearfix"> <!-- link_to_add_fields "Nueva incidencia", f, :incidencias --> </div>
				
				<div class="clearfix">
					<%= f.label :votos, '¿Cuántas personas han votado?' %>
					<div class="input">
						<%= f.text_field :votos, :class => 'mini'%>
					</div>
				</div>
			
				<div class="clearfix">
					<%= f.label :cerrado_forzado, '¿Cerraron el centro de manera forzada?' %>
					<div class="input">
						<ul class="inputs-list">
							<li>
								<label>
									<%= f.radio_button :cerrado_forzado, true %>
									<span><%= 'Sí' %></span>
								</label>
							</li>
							<li>
								<label>
									<%= f.radio_button :cerrado_forzado, false %>
									<span><%= 'No' %></span>
								</label>
							</li>
						</ul>
					</div>
				</div>
				<!-- <div class="actions">
					<%= f.submit 'Guardar', :disable_with => 'Guardando...', :class => 'btn primary' %>
					<button type="reset" class="btn"> Cancelar </button>
				</div> -->
			</fieldset>
		</div> <!-- end span6 -->
		<div class="span7">


		</div>
	</div><!-- end row -->
	<div class="row">
		<div class="span14">
			<div class="actions">
				<%= f.submit "Guardar", :disable_with => 'Guardando...', :class => 'btn primary'%>
				<button type="reset" class="btn"> Resetear </button>
			</div>
		</div>
	</div>
	
	<% end %>