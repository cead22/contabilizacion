<center><h2>Iniciar Sesi&oacute;n</h2></center>
<br /><br />

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
<div class="row">
	<div class="span3">&nbsp;</div>
	<div class="span7">
		<div class="clearfix">
			<%= f.label :username, 'Nombre de usuario' %>
			<div class="input">
				<%= f.text_field :username %>
			</div>
		</div>
		<div class="clearfix">
			<%= f.label :password %>
			<div class="input">
				<%= f.password_field :password %>
			</div>
		</div>
		<% if devise_mapping.rememberable? %>
		 <%= f.label :remember_me, 'Recordarme' %>
			<div class="input">
		<%= f.check_box :remember_me %>
		</div>
		<% end -%>

		<div class="actions">
			<%= f.submit "Entrar", :disable_with => 'Espere...' , :class => ['btn small primary'] %>
		</div>
		<% end %>

		<!-- <div class="clearfix">
			<%= #render :partial => "devise/shared/links"
			 %>
		</div> -->
	</div>
</div>
