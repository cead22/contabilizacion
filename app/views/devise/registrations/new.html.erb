<center><h2>Registrarse</h2></center>
<br /><br />

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
<%= devise_error_messages! %>
<div class="row">
		<div class="span3">&nbsp;</div>
	<div class="span7">
		<div class="clearfix">
			<%= f.label :email %>
			<div class="input">
				<%= f.email_field :email %>
			</div>
		</div>

		<div class="clearfix">
			<%= f.label :password %>
			<div class="input">
				<%= f.password_field :password %>
			</div>
		</div>

		<div class="clearfix">
		<%= f.label :password_confirmation %>
		<div class="input">
			<%= f.password_field :password_confirmation %>
		</div>
	</div>

	<div class="actions">
		<%= f.submit "Crear Usuario", :disable_with => 'Espere...', :class => ['btn small primary'] %> <br/>
	</div>
	<% end %>
	<div class="clearfix">
		<%= render :partial => "devise/shared/links" %>
	</div>
</div>
</div>
