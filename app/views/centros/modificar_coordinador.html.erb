<h1>Modificar Coordinador</h1>
<h6><%= @centro.nombre %></h6>
</div>

<%= form_for @centro.coordinador, :url => edit_coordinador_path, :method => 'put' do |f| %>
<ul>
  <% @centro.coordinador.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
  <% end %>
</ul>

<div class="row">
	<div class="span3">&nbsp;</div>
	<div class="span7">
		
		<div class="clearfix">
			<%= f.label :nombre %>
			<div class="input">
				<%= f.text_field :nombre %>
			</div>
		</div>

		<div class="clearfix">
			<%= f.label :telefono1 %>
			<div class="input">
				<%= f.text_field :telefono1 %>
			</div>
		</div>

		<div class="clearfix">
			<%= f.label :telefono2 %>
			<div class="input">
				<%= f.text_field :telefono2 %>
			</div>
		</div>
		
	</div>
</div>
<div class="row">
	<div class="span3">&nbsp;</div>
	<div class="actions span5">
		<%= f.submit "Guardar", :disable_with => 'Espere...', :class => ['btn small primary'] %>
		<%= link_to 'Cancelar', centro_path(@centro), :class => ['btn'] %>
	</div>
	<% end %>
</div>