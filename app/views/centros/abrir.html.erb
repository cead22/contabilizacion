<h1 id="primera_llamada">Primera Llamada</h1>

<%= form_for @centro do |f| %>

	¿Abri&oacute; el centro?
	<%= f.radio_button :abrio, Time.now, :id => 'centro_abrio' %>
	<%= f.label :abrio, 'Sí' %>
