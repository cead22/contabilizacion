  <h1>Primera Llamada <small> <%= @centro.nombre %> </small></h1>
</div>
<%= form_for @centro do |f| %>
<div class="row">
	<div class="span1"> &nbsp; </div>
	<div class="span6">
		<fieldset>
			<div class="clearfix">
				<%= f.label :abrio, '¿Abrió el centro?' %>
				<div class="input">
					<ul class="inputs-list">
						<li>
							<label>
								<%= f.radio_button :abrio, Time.now, :id => 'centro_abrio' %>
								<span><%= 'Sí' %></span>
							</label>
						</li>
						<li>
							<label>
								<%= f.radio_button :abrio, false %>
								<span><%= 'No' %></span>
							</label>
						</li>
					</ul>
				</div>
			</div>
				
			<div class="clearfix">
				<%= f.label :instalacion_correcta, '¿Se instaló el centro de forma correcta?' %>
				<div class="input">
					<ul class="inputs-list">
						<li>
							<label>
								<%= f.radio_button :instalacion_correcta, :true %>
								<span><%= 'Sí' %></span>
							</label>
						</li>
						<li>
							<label>
								<%= f.radio_button :instalacion_correcta, :false %>
								<span><%= 'No' %></span>
							</label>
						</li>
					</ul>
				</div>
			</div>
			
			<div class="clearfix">
				<%= f.label :testigos_nuestros_presentes, '¿Se encuentran nuestros miembros y testigos?' %>
				<div class="input">
					<ul class="inputs-list">
						<li>
							<label>
								<%= f.radio_button :testigos_nuestros_presentes, :true %>
								<span><%= 'Sí' %></span>
							</label>
						</li>
						<li>
							<label>
								<%= f.radio_button :testigos_nuestros_presentes, :false  %>
								<span><%= 'No' %></span>
							</label>
						</li>
					</ul>
				</div>
			</div>
			
			<div class="clearfix">
				<%= f.label :otros_testigos_presentes, '¿Están los testigos de otros candidatos?' %>
				<div class="input">
					<ul class="inputs-list">
						<li>
							<label>
								<%= f.radio_button :otros_testigos_presentes, :true %>
								<span><%= 'Sí' %></span>
							</label>
						</li>
						<li>
							<label>
								<%= f.radio_button :otros_testigos_presentes, :false %>
								<span><%= 'No' %></span>
							</label>
						</li>
					</ul>
				</div>
			</div>
			
			<div class="clearfix">
				<%= f.label :plan_republica_presente, '¿Llegó el Plan República?' %>
				<div class="input">
					<ul class="inputs-list">
						<li>
							<label>
								<%= f.radio_button :plan_republica_presente, :true %>
								<span><%= 'Sí' %></span>
							</label>
						</li>
						<li>
							<label>
								<%= f.radio_button :plan_republica_presente, :false %>
								<span><%= 'No' %></span>
							</label>
						</li>
					</ul>
				</div>
			</div>

		</fieldset>
	</div>
	<div class="span7">
		<%= f.fields_for :incidencias, f.object.class.reflect_on_association(:incidencias).klass.new do |builder| %>
		<%= render 'incidencia_form', :f => builder %>
		<% end %>
		
		<p id="link_add" ><%= link_to_add_fields 'Agregar Nueva Incidencia', f, :incidencias %></p>
	</div>
</div>
<div class="row">
	<div class="span14">
	<div class="actions">
		<%= f.submit "Guardar", :disable_with => 'Guardando...', :class => 'btn primary'%>
		<button type="reset" class="btn"> Cancelar </button>
	</div>
	</div>
</div>
<!-- </div> -->
<% end %>