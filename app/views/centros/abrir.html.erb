	<%= f.radio_button :otros_testigos_presentes, :true %>
	<%= f.label :otros_testigos_presentes, 'No' %>
	<%= f.radio_button :otros_testigos_presentes, :false %>
	
	<br/>
	
	<%= f.label :plan_republica_presente, '¿Llegó el Plan República?' %>
